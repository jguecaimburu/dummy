<div class="row" id="<%= dom_id occupation %>">
  <div class="col">
    <% if notice %>
      <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:company_name) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.company_name %></p>
          </div>
        </div>
        
        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:title) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.title %></p>
          </div>
        </div>

        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:department) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.department %></p>
          </div>
        </div>

        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:address) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.address %></p>
          </div>
        </div>

        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:city) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.city %></p>
          </div>
        </div>

        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:state) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.state %></p>
          </div>
        </div>

        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:postal_code) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.postal_code %></p>
          </div>
        </div>

        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:latitude) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.latitude %></p>
          </div>
        </div>

        <div class="row border-bottom mx-2 mb-3 pb-2">
          <div class="col-sm-4">
            <p class="mb-0"><%= model_human_attribute_name(:longitude) %></p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= @occupation.longitude %></p>
          </div>
        </div>
        
        <div class="row justify-content-end pr-5 pt-4">
          <div class="col-3">
            <div class="d-flex justify-content-end">
              <%= link_to "Edit", edit_user_occupation_path(occupation.user, occupation), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>