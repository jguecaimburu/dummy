<article class="container-fluid content">
  <header class="row mb-5">
    <div class="col">
      <nav class="bg-light rounded p-3 mb-1">
        <%= link_to user_occupation_path(@user, @occupation), class: "btn btn-light btn-lg" do %>
          <i class="bi bi-arrow-left"></i>
          <span>Back</span>
        <% end %>
      </nav>
    </div>
  </header>

  <div class="row justify-content-center">
    <div class="col">
      <div class="container px-0">
        <div class="row">
          <div class="col">
            <div class="card mb-4">
              <div class="card-body text-center user-card-body">
                
                <div class="row align-items-start">
                  <div class="col-4">
                    <% cache [@user, :profile] do %>
                      <%= render "users/user_profile", user: @user %>
                    <% end %>
                    
                    <%= render partial: "users/shared/vertical_navbar",
                          locals: { user: @user } %>
                  </div>
                  <div class="col-8 mt-4">
                    <%= render "form", occupation: @occupation %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>