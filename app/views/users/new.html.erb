<article class="container-fluid content">
  <header class="row mb-5">
    <div class="col">
      <nav class="bg-light rounded p-3 mb-1">
        <%= link_to users_path, class: "btn btn-light btn-lg" do %>
          <i class="bi bi-arrow-left"></i>
          <span>Back</span>
        <% end %>
      </nav>
    </div>
  </header>

  <div class="row justify-content-center">
    <div class="col">
      <div class="container px-0">
        <div class="row">
          <div class="col">
            <div class="card mb-4">
              <div class="card-body text-center user-card-body">
                
                <div class="row align-items-start">
                  <div class="col-4">
                    <% cache :new_user_profile do %>
                      <%= render "user_profile", user: @user %>
                    <% end %>
                    
                    <%= render(VerticalNavbarComponent.new) do |component| %>
                      <% component.with_tabs([
                        { name: "Personal Data", path: "#", current_tab: true },
                        { name: "Billing Details", path: "#", class: ["nav-link", "disabled"], current_tab: false },
                        { name: "Company", path: "#", class: ["nav-link", "disabled"], current_tab: false }
                      ]) %>
                    <% end %>
                  </div>
                  <div class="col-8 mt-4">
                    <%= render "form", user: @user %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
