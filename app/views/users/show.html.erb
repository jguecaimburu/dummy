<article class="container-fluid content">
  <header class="row mb-5">
    <div class="col">
      <nav class="bg-light rounded p-3 mb-1">
        <%= link_to "New user", new_user_path %>
      </nav>
    </div>
  </header>

  <div class="row justify-content-center">
    <div class="col">
      <div class="alert-success"><%= notice %></div>
      <div id="user">
        <div class="container px-0">
          <div class="row">
            <div class="col">
              <div class="card mb-4">
                <div class="card-body text-center">
                  
                  <div class="row align-items-start">
                    <div class="col">
                      <div>
                        <%= image_tag(@user.image, alt: "avatar", class: "rounded-circle img-fluid user-profile-picture") %>
                        <p class="h3 mt-3"><%= @user.name %></p>
                        <p><%= @user.email %></p>
                      </div>
                      
                      <div
                        class="nav flex-column nav-pills text-center"
                        id="v-pills-tab"
                        role="tablist"
                        aria-orientation="vertical">

                        <%= link_to "Personal Data",
                              "#",
                              class: "nav-link active",
                              role: "tab", aria: { selected: true } %>

                        <%= link_to "Billing Details",
                              user_billing_detail_path(@user),
                              class: "nav-link",
                              role: "tab", aria: { selected: false } %>
                        
                        <%= link_to "Company",
                              user_company_detail_path(@user),
                              class: "nav-link",
                              role: "tab", aria: { selected: false } %>

                      </div>
                    </div>

                    <div class="col mt-4">
                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:first_name) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.first_name %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:last_name) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.last_name %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:maiden_name) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.maiden_name %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:birth_date) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.birth_date %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:age) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.age %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:gender) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.gender %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:blood_group) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.blood_group %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:height) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.height %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:weight) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.weight %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:eye_color) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.eye_color %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:hair_color) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.hair_color %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:hair_type) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.hair_type %></p>
                        </div>
                      </div>
                    </div>

                    <div class="col mt-4">
                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:username) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.username %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:password) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.password %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:image) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.image %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:email) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.email %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:domain) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.domain %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:phone) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.phone %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:university) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.university %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:ein) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.ein %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:ssn) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.ssn %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:ip) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.ip %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:mac_address) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.mac_address %></p>
                        </div>
                      </div>

                      <div class="row border-bottom mx-2 mb-3 pb-2">
                        <div class="col-sm-4">
                          <p class="mb-0"><%= model_human_attribute_name(:user_agent) %></p>
                        </div>
                        <div class="col-sm-8">
                          <p class="text-muted mb-0"><%= @user.user_agent %></p>
                        </div>
                      </div>
                    </div>

                  </div>
                  <div class="row justify-content-end pr-5 pt-4">
                    <div class="col-3">
                      <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-primary">Edit</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
