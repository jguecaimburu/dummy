<article class="container-fluid content">
  <header class="row mb-5">
    <div class="col">
      <nav class="bg-light rounded p-3 mb-1">
        <%= link_to "New user", new_user_path %>
      </nav>
    </div>
  </header>
  
  <div class="row justify-content-center">
    <div class="col">
      <div class="alert-success"><%= notice %></div>
      <div id="users">
        <table class="table table-hover align-middle mb-0 bg-white border rounded">
          <thead class="bg-light">
            <tr>
              <th><span class="d-inline-block users-table-header-name"><%= model_human_attribute_name(:name) %></span></th>
              <th><%= model_human_attribute_name(:age) %></th>
              <th><%= model_human_attribute_name(:gender) %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center gap-3">
                    <div>
                      <%= image_tag(user.image, height: 45, width: 45, alt: user.name, class: "rounded") %>
                    </div>
                    <div>
                      <p class="fw-bold mb-1"><%= user.name %></p>
                      <p class="text-muted mb-0"><%= user.email %></p>
                    </div>
                  </div>
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <p class="mb-0"><%= user.age %></p>
                  </div>
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <p class="mb-0"><%= user.gender.to_s.capitalize  %></p>
                  </div>
                </td>
                <td>
                  <div class="d-flex gap-2 align-items-center justify-content-end">
                    <%= link_to user, class: "btn btn-rounded" do %>
                      <i class="bi bi-card-heading"></i>
                      <span>Details</span>
                    <% end %>
                    <%= link_to edit_user_path(user), class: "btn btn-rounded" do %>
                      <i class="bi bi-pencil-fill"></i>
                      <span>Quick Edit</span>
                    <% end %>
                    <%= button_to user, method: :delete, class: "btn btn-danger btn-rounded" do %>
                      <i class="bi bi-trash3-fill"></i>
                      <span>Delete</span>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</article>
